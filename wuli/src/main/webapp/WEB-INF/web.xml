<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
  <resource-ref>
    <description>JNDI DataSource</description>
    <res-ref-name>jdbc/wuliDataMySQL</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>

  <session-config>
    <session-timeout>30</session-timeout>
    <cookie-config>
      <name>customSessionId</name>
      <http-only>true</http-only>
      <secure>true</secure>
    </cookie-config>
  </session-config>

  <servlet>
    <servlet-name>ChatroomServlet</servlet-name>
    <servlet-class>tw.edu.ntut.sce.java18.common.controller.ChatroomServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ChatroomServlet</servlet-name>
    <url-pattern>/ChatroomServlet</url-pattern>
  </servlet-mapping>
</web-app>

